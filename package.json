{
  "name": "playwright-demo-project",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev:backend": "pnpm --filter ./apps/backend dev",
    "dev:frontend": "pnpm --filter ./apps/frontend dev",
    "test:lint": "pnpm -r run lint",
    "test:unit": "pnpm -r run test:unit",
    "test:integration": "pnpm -r run test:integration",
    "test:e2e": "pnpm -r run test:e2e",
    "playwright:browsers": "pnpm --filter @playwright-demo/tests-e2e exec playwright install --with-deps",
    "ci": "pnpm run test:lint && pnpm run test:unit && pnpm run test:integration && pnpm run test:e2e",
    "allure:report": "node ./scripts/create-allure-report.mjs",
    "allure:open": "pnpm run allure:report && pnpm exec allure open allure-report",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mts,cts,mjs,cjs}": [
      "pnpm exec prettier --write",
      "pnpm exec eslint --max-warnings=0 --fix --no-warn-ignored"
    ],
    "*.{json,md,mdx,yml,yaml,css,scss,html}": "pnpm exec prettier --write"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.1",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "allure-commandline": "^2.30.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.1.0",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
